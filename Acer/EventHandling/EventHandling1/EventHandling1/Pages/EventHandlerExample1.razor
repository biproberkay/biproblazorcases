@page "/event-handler-example-1"

<h1>@currentHeading</h1>

<p>
    <label>
        New title
        <input @bind="newHeading" />
    </label>
    <button @onclick="UpdateHeading">
        Update heading
    </button>
</p>

<p>
    <label>
        <input type="checkbox" @onchange="CheckChanged" />
        @checkedMessage
    </label>
</p>
<form action="https://wa.me/@number" method="get" target="_blank">
    <label class="form-label" for="telnumber">Label</label>
    <input class="form-control" type="search" autocomplete="on" inputmode="tel" autofocus name="telnumber" />
    <button class="btn btn-primary" type="submit">Button</button>
</form>
@code {
    private string currentHeading = "Initial heading";
    private string? newHeading;
    private long number = 00905398220128;
    private string checkedMessage = "Not changed yet";

    private void UpdateHeading()
    {
        currentHeading = $"{newHeading}!!!";
    }

    private void CheckChanged()
    {
        checkedMessage = $"Last changed at {DateTime.Now}";
    }
}